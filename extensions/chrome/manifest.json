{
  "manifest_version": 2,
  "name": "AnviAdblock",
  "version": "1.0.0.0",

  "description": "AnviAdblock Plugin",

  "permissions": [
    "tabs",
    "https://*/*",
    "http://*//*",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "all_frames": true,
      "js": ["preload.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://wangyaoyao/*"],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
   ],

  "page_action": {
    "default_icon": "abp-19.png",
    "default_popup": "popup.html",
    "default_title": "Anvisoft Adblock"
  },

  "background": {
    "page": "background.html"
  }
}