{
  "manifest_version": 2,
  "name": "AnviAdblock",
  "version": "1.0.0.0",

  "description": "AnviAdblock Plugin",

  "permissions": [
    "https://*/*",
    "http://*//*",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],

  "content_scripts": [
    {
      "all_frames": true,
      "js": ["preload.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    },
    {
      "matches": ["http://wangyaoyao/*"],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
   ],
  
  "background": {
    "page": "background.html"
  }
}